<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/invoice_menu_root"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/imdat_mavisi_2"
        android:gravity="center"
        android:padding="7dp"
        >
        <Button
            android:id="@+id/invoice_menu_group_button"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Group Users"
            />
        <Button
            android:id="@+id/invoice_menu_items_button"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Items"
            />
        <Button
            android:id="@+id/invoice_menu_calculate_button"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CALCULATE"
            />
    </GridLayout>

    <LinearLayout
        android:id="@+id/invoice_menu_content_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/imdat_mavisi_2"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/invoice_menu_items_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:id="@+id/invoice_menu_user_group_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>